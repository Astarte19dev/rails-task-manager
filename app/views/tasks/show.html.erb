<h1><%= @task.title %></h1>
<><%= @task.details %></p>
<% if @task.completed %>
  <p> <%= "This task is completed yet" %></p>
  <% else %>
   <p> <%= "This task is not completed yet" %></p>
<% end %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Edit a new task", edit_task_path(@task) %>
